# DIAS Package Creator - Environment Configuration
# Copy this file to .env and customize the values for your environment.
# All values are optional - defaults will be used if not specified.

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="DIAS Package Creator"
APP_VERSION="1.0.0"
APP_AUTHOR="IKA Tr√∏ndelag"

# =============================================================================
# DIAS/PREMIS METADATA DEFAULTS
# These values are used in generated XML files
# =============================================================================

# Storage platform name (used in PREMIS log.xml)
PRESERVATION_PLATFORM="Preservation platform ESSArch"

# Message digest originator (used in PREMIS for checksums)
CHECKSUM_ORIGINATOR="ESSArch"

# Linking agent identifier (used in PREMIS events)
LINKING_AGENT="ESSArch"

# PREMIS event type code for log creation
LOG_CREATION_EVENT_TYPE="10000"

# =============================================================================
# SCHEMA LOCATIONS
# These URLs are embedded in generated XML files
# =============================================================================

# METS schema location for info.xml
METS_INFO_SCHEMA_LOCATION="http://www.loc.gov/METS/ http://schema.arkivverket.no/METS/info.xsd"

# METS schema location for mets.xml
METS_SIP_SCHEMA_LOCATION="http://www.loc.gov/METS/ http://schema.arkivverket.no/METS/mets.xsd"

# METS profile
METS_PROFILE="http://xml.ra.se/METS/RA_METS_eARD.xml"

# PREMIS schema location
PREMIS_SCHEMA_LOCATION="http://arkivverket.no/standarder/PREMIS http://schema.arkivverket.no/PREMIS/v2.0/DIAS_PREMIS.xsd"

# PREMIS version
PREMIS_VERSION="2.0"

# Object identifier type (used in PREMIS)
OBJECT_IDENTIFIER_TYPE="NO/RA"

# =============================================================================
# FILE PROCESSING SETTINGS
# =============================================================================

# Disk space safety margin multiplier (1.5 = 50% extra space required)
DISK_SPACE_SAFETY_MARGIN="1.5"

# Package size multiplier for space estimation
# Package will be approximately this times the source size
PACKAGE_SIZE_MULTIPLIER="3.0"

# SHA-256 chunk size in bytes (64KB default)
SHA256_CHUNK_SIZE="65536"

# File processor chunk size in bytes (8MB default)
FILE_PROCESSOR_CHUNK_SIZE="8388608"

# =============================================================================
# LOGGING SETTINGS
# =============================================================================

# Log directory (relative to home directory, or absolute path)
# Leave empty for default: ~/.dias_package_creator/logs
LOG_DIRECTORY=""

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="DEBUG"

# Maximum age of log files in days
LOG_MAX_AGE_DAYS="30"

# Maximum number of log files to keep
LOG_MAX_FILES="50"

# =============================================================================
# GUI DEFAULT VALUES
# These are default dropdown options shown in the GUI
# =============================================================================

# Default organizations (comma-separated)
DEFAULT_ARCHIVIST_ORGANIZATIONS="9997 Kommune Eksempel A,9998 Kommune Eksempel B,9999 Kommune Eksempel C"

# Default creator organizations/IKA (comma-separated)
DEFAULT_CREATOR_ORGANIZATIONS="9997 Kommune Eksempel A,9998 Kommune Eksempel B,9999 Kommune Eksempel C"

# Default system names (comma-separated)
DEFAULT_SYSTEM_NAMES="Eksempel System A,Eksempel System B,Eksempel System C"

# Default content formats (comma-separated)
DEFAULT_CONTENT_FORMATS="SIARD,ADDML,NOARK-5,JSON"

# Default preservation organization
DEFAULT_PRESERVATION_ORGANIZATION="Nasjonalarkivet"
